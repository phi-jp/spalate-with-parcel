page-modals
  div.flex.flex-column.h-full
    div(data-is='module-header', title='モーダル')
    div.h-full.overflow-scroll(ref='body')
      div.container.py12
        div.bg-white.p16.mb16(each='{section in sections}')
          div.bold.mb8 {section.label}
          div.inline-block.mr8.mb8(each='{item in section.items}')
            button.button(onclick='{item.onclick}') {item.label}
    module-tabbar

  style(type='less').
    :scope {
      display: block;
    }

  script.

    this.sections = [
      {
        label: 'alert',
        items: [
          {
            label: '開く',
            onclick: () => {
              spalate.modal.alert('Ttile', 'Message');
            }
          },
          {
            label: '開く(タイトルのみ)',
            onclick: () => {
              spalate.modal.alert('Hello, world!');
            }
          },
          {
            label: '連続で開く',
            onclick: async () => {
              var modal;
              modal = spalate.modal.alert('A');
              await modal.waitClose();

              modal = spalate.modal.alert('B');
              await modal.waitClose();

              modal = spalate.modal.alert('C');
              await modal.waitClose();
            }
          },
          {
            label: '同時に開く',
            onclick: () => {
              spalate.modal.alert('A');
              spalate.modal.alert('B');
              spalate.modal.alert('C');
            }
          },
          {
            label: '背景タッチ無効(dismissible:true)',
            onclick: () => {
              spalate.modal.alert('OK でしか閉じれないよ', '', {
                dismissible: false,
              });
            }
          },

          
        ],
      },
      {
        label: 'alert',
        items: [
          {
            label: '開く',
            onclick: () => {
              spalate.modal.alert('Hello, world!', 'aaaaaaaaa');
            }
          }
        ],
      },
    ];
